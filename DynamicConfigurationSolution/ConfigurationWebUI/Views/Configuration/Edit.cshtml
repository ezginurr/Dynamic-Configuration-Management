@model ConfigurationLibrary.Models.ConfigurationItem

@{
    ViewData["Title"] = "Edit Configuration";
}

<h2>Edit Configuration</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <option value="string">string</option>
            <option value="int">int</option>
            <option value="bool">bool</option>
            <option value="double">double</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Value"></label>
        <input asp-for="Value" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Is Active?</label>
    </div>
    <div class="form-group">
        <label asp-for="ApplicationName"></label>
        <input asp-for="ApplicationName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Update</button>
    <a asp-controller="Configuration" asp-action="List" class="btn btn-secondary mt-2">Cancel</a>
</form>
